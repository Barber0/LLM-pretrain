{
    "gradient_accumulation_steps": 30,
    "train_micro_batch_size_per_gpu": 4,
    "gradient_clipping": 1.0,
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 9.7e-6,
            "weight_decay": 0.01,
            "betas": [
                0.9,
                0.95
            ],
            "eps": 1e-8
        }
    },
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
            "total_num_steps": 2000,
            "warmup_min_lr": 9.7e-6,
            "warmup_max_lr": 4.5e-5,
            "warmup_num_steps": 100
        }
    },
    "fp16": {
        "enabled": true
    },
    "zero_optimization": {
        "stage": 1,
        "contiguous_gradients": true,
        "reduce_bucket_size": 1e7
    }
}
