{
    "gradient_accumulation_steps": 32,
    "train_micro_batch_size_per_gpu": 6,
    "gradient_clipping": 1.0,
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 9.7e-6,
            "weight_decay": 0.01,
            "betas": [
                0.9,
                0.95
            ],
            "eps": 1e-8
        }
