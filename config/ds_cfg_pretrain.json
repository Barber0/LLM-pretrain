{
    "gradient_accumulation_steps": 50,
    "train_micro_batch_size_per_gpu": 7,
    "gradient_clipping": 1.0,
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 1e-7,
            "weight_decay": 0.01,
            "betas": [
                0.9,
                0.95
            ],
            "eps": 1e-8
        }
    },
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
            "total_num_steps": 4000,
            "warmup_min_lr": 1e-7,
            "warmup_max_lr": 2e-6,
            "warmup_num_steps": 400
        }
    },
    "fp16": {
	"enabled": true
    },
    "zero_optimization": {
        "stage": 2,
        "contiguous_gradients": true
    }
}
