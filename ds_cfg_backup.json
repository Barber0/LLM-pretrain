{
    "train_batch_size": 60,
    "gradient_accumulation_steps": 5,
    "train_micro_batch_size_per_gpu": 12,
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 0.00007,
            "weight_decay": 0.01
        }
    },
    "scheduler": {
        "type": "OneCycle",
        "params": {
            "cycle_first_step_size": 1000,
            "cycle_first_stair_count": 500,
            "cycle_second_step_size": 1000,
            "cycle_second_stair_count": 500,
            "decay_step_size": 1000,
            "cycle_min_lr": 0.00007,
            "cycle_max_lr": 0.00035,
            "decay_lr_rate": 0.001,
            "cycle_min_mom": 0.85,
            "cycle_max_mom": 0.99,
            "decay_mom_rate": 0.0
        }
    },
    "fp16": {
        "enabled": true
    },
    "zero_optimization": {
        "stage": 1
    }
}
